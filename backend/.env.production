# Production Environment Variables
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/svms_production
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/svms_production

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=24h

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Security
BCRYPT_ROUNDS=12

# CORS Configuration
FRONTEND_URL=https://svms.webgiants.com.au
ALLOWED_ORIGINS=https://svms.webgiants.com.au,http://localhost:3000

# File Upload
MAX_FILE_SIZE=5mb
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100